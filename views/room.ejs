<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      defer
      src="https://unpkg.com/peerjs@1.2.0/dist/peerjs.min.js"
    ></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="script.js" defer></script>
    <title>Video Conversation App</title>
    <style>
      .content {
        min-height: 100vh;
        width: 100%;
        background-color: #efefef;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        gap: 15px;
        position: relative;
      }
      .error {
        position: absolute;
        top: 30%;
        left: 50%;
        transform: translateX(-50%);
        font-weight: bold;
        color: red;
      }
      input {
        padding: 1rem;
        min-width: 300px;
      }
      button {
        background-color: #000;
        color: #fff;
        outline: none;
        padding: 10px 20px;
        cursor: pointer;
        transition: 0.2s all ease-in-out;
      }
      button:hover {
        transform: scale(0.95);
      }
      #video-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, 300px);
        grid-auto-rows: 300px;
        width: 100%;
      }

      video {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    </style>
  </head>
  <body>
    <div class="content">
      <input type="text" class="room" placeholder="Write Your Room" />
      <button class="btn" type="button">Join Room</button>
      <div id="video-grid"></div>
      <div class="error"></div>
    </div>
  </body>
</html>
